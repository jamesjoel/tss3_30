<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h3>View All Categories</h3>
            <table class="table table-dark table-bordered table-striped">
                <tr>
                    <th>S.No.</th>
                    <th>Category Name</th>
                    <th>Products</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% category.forEach(function(x, n){ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= x.category_name %></td>
                        <td>
                            <% if(x.pro_info.length == 0){ %>
                                Not Found
                            <% }else{ %>

                                <table class="table table-light table-bordered table-striped">
                                    <% x.pro_info.forEach(function(y, j){ %>

                                    
                                    <tr>
                                        <td><%= y.product_title %></td>
                                    </tr>
                                    <% }) %>
                                </table>
                            <% } %>
                        </td>
                        <td><a href="/admin/category/edit/<%= x._id %>" class="btn btn-sm btn-info">Edit</a></a></td>
                        <td><a href="#" class="btn btn-sm btn-danger">Delete</a></a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>