
                <div class="col-md-9">
                    <h5>Products</h5>
                    <div class="row">
                        <% product.forEach(function(x){ %>

                        


                        <div class="col-md-4 col-6 col-sm-6">
                            <div class="card mb-4">
                                <a href="/upload/<%= x.image %>" download ><img class="card-img-top" src="/upload/<%= x.image %>" height="200" /></a>
                                <div class="card-body">
                                    <p class="card-title float-left font-weight-bold"><%= x.product_title %></p>
                                    <p class="card-title float-right">&#8377; <%= x.product_price %></p>
                                </div>
                                <div class="card-footer">
                                    <a href="#" class="btn btn-sm btn-info">More</a>
                                    <a href="/cart/add/<%= x._id %>" class="btn btn-sm btn-dark">Add to Cart</a>
                                </div>

                            </div>
                        </div>
                        <% })%>
                        
                    </div>




        