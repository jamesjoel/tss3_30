<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3>View All Categories</h3>
            <table class="table table-dark table-bordered table-striped">
                <tr>
                    <th>S.No.</th>
                    <th>Category Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% categories.forEach(function(x, n){ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td class="text-light"><%= x.category_name %></td>
                        <td><a href="/admin/categories/edit/<%= x._id %>" class="btn btn-sm btn-info">Edit</a></a></td>
                        <td><a href="/admin/categories/delete/<%= x._id %>" class="btn btn-sm btn-danger">Delete</a></a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>