<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 table-responsive">
            <h3>View All Users</h3>
            <table class="table table-dark table-bordered table-striped">
                <tr>
                    <th>S.No.</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Status</th>
                    <th>Change Status</th>
                    
                </tr>
                <% user.forEach(function(x, n){ 
                    
                    if(x.status==1)
                        var status = "Active";
                    else
                        var status = "Deactive";

                    

                    %>
                <tr>
                    <td><%= n+1 %></td>
                    <td><%= x.f_name %></td>
                    <td><%= x.email %></td>
                    <td><%= x.contact %></td>
                    <td><%= status %></td>
                    <td><a href="/admin/users/<%= x._id %>/<%= x.status %>" class="btn btn-sm btn-warning">Change</a></td>
                </tr>

                <% }); %>
            </table>
        </div>
    </div>
</div>
