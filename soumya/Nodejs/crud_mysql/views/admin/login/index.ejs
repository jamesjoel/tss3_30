<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <div id="login" class="form-wrapper1">

                <form action="/admin" method="post" class="form">
                    <h4 class="text-center text-muted">Login</h4>
                    <div class="form-group">
                        <label class="form-label" for="first">Username or Email</label>
                        <input id="first" name="username" class="form-input" type="text" />
                    </div>
                    <div class="form-group ">
                        <label class="form-label" for="last">Password</label>
                        <input id="last" name="password" class="form-input" type="password" />
                    </div>
                    <div class="form-group submit-btn">

                        <input id="last" class="border-0 px-4 btn btn-primary" value="Login" type="submit" />
                    </div>
                    <p class="text-danger text-center">
                        <%= msg %>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>