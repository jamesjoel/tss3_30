<div id="cartz"  class="container">
    <div class="row">
        <div class="col-md-12">
            <h5 class="text-center">Item in Your Cart</h5>
            <div  class="row">
                <div class="col-md-10 offset-md-1">
                    <table class="table table-dark table-hover table-striped">
                        <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Discounted Price</th>
                    <th>Remove</th>
                </tr>
                <% 
                var total = 0;
                result.forEach(function(x, i){ 
                    
                    var a = x.product_discount;
                    var b = x.product_price;
                    var d = (b*a)/100; 
                    var d = b-d;
                    total += d;
                    %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= x.product_title %></td>
                        <td><img src="/uploads/<%= x.image %>" height="80" width="80"</td>
                        <td><%= x.product_price %></td>
                        <td><%= x.product_discount %>%</td>
                        <td><%= d %></td>
                        <td><a class="text-light" href="/cart/remove/<%= x._id %>"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                    </tr>
                    <% }) %>
                    <tr>
                        <td colspan="5" align="right">Total Price</td>
                        <td><%= total %></td>
                    </tr>
                </table>
                <a href="/cart/clear" class="mb-1 btn btn-dark float-right">Clear Cart</a>
            </div>
            
        </div>
        
    </div>
</div>
</div>
<script>
    window.onload = function(){ 
         
        $('html, body').animate({
            scrollTop: $('#cartz').offset().top
        }, 'slow');
        
    }
        
        </script>