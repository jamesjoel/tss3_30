<div id="moreinfo" class="container mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="row">
                <div class="col-md-6"  style="border-right: lightgray solid 2px;">
                    <h4 class="text-center"><%= product.product_title %></h4>

                    <div>
                        <p class="text-justify"><%= product.product_detail %></p>
                    </div>
                <% var d = (product.product_price*product.product_discount)/100;
                    d = product.product_price-d;
                %>
                    <div class="d-flex float-left">
                        <p class="text-muted pr-2" style="text-decoration: line-through;"><strike><%= product.product_price %></strike></p>
                        <p>â‚¹<%= d %></p>

                    </div>

                    <a href="/moreinfo/buynow" class="float-right btn-square btn-sm  btn-warning">
                        <i class="fa fa-shopping-cart pr-2" aria-hidden="true"></i>Buy Now
                    </a>

                   
                </div>
                <div class="col-md-6">
                    <img src="/uploads/<%= product.image %>" width="100%" height="100%" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function(){ 
         
        $('html, body').animate({
            scrollTop: $('#moreinfo').offset().top
        }, 'slow');
        
    }
        
        </script>