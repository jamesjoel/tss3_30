<div class="container mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <h1>This is Your Profile
                <%= session.name %>
            </h1>
            <table class="table-dark table table-bordered table-hover">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <th>Full Name</th>
                        <td>
                            <%= user.f_name %>
                        </td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>
                            <%= user.email %>
                        </td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td>
                            <%= user.gender %>
                        </td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>
                            <%= user.city %>
                        </td>
                    </tr>
                    <tr>
                        <th>Contact</th>
                        <td>
                            <%= user.contact %>
                        </td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>
                            <%= user.address %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <Hr />
            <div class="text-center">
                <a href="/profile/edit/" class="btn btn-info">Edit</a>
                <a href="#" class="btn btn-info">Change Password</a>
            </div>
        </div>
    </div>
</div>