<div id="editprofile" class="container mb-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <h1 class="text-muted text-center"> Edit Profile
            </h1>
            <div class="card">
                <div class="card-body">
                    <form action="/profile/update" method="POST">
                        <div class="form-group">
                            <label>Fullname</label>
                            <input name="f_name" value="<%= user.f_name %>" class="form-control" type="text" />
                        </div>

                        <div class="form-group ">
                            <label> Email</label>
                            <input name="email" value="<%= user.email %>" class="form-control" type="text" />
                        </div>
                        <div class="form-group ">
                            <label>Contact</label>
                            <input name="contact" value="<%= user.contact %>" class="form-control" type="number" />
                        </div>

                        <div class="form-group">
                            <label>Address</label>
                            <textarea placeholder="(Optional)" name="address"
                                class="form-control"><%= user.address %></textarea>
                        </div>
                        <div class="form-group">
                            <label class="text-muted">Gender</label>
                            <Br />
                            <% if(user.gender == "male"){ %>
                            <input type="radio" checked="checked" value="male" name="gender" id="male" />
                            <label for="male" class="mr-3">Male</label>

                            <input type="radio" value="female" name="gender" id="female" />
                            <label for="female" class="mr-3">Female</label>
                            <% } else{%>
                            <input type="radio" value="male" name="gender" id="male" />
                            <label for="male" class="mr-3">Male</label>

                            <input type="radio" checked="checked" value="female" name="gender" id="female" />
                            <label for="female" class="mr-3">Female</label>
                            <% } %>
                        </div>

                        <div class="form-group">
                            <label>City</label>
                            <select name="city" class="form-control">
                                <option value="" disabled selected>Choose your city</option>
                                <% if(user.city == "Indore"){ %>
                                    <option selected="selected">Indore</option>
                                    <option>Mumbai</option>
                                    <option>Pune</option>
                                    <option>Delhi</option>
                              <%  }else if(user.city == "Mumbai"){ %>
                                    <option>Indore</option>
                                    <option selected="selected">Mumbai</option>
                                    <option>Pune</option>
                                    <option>Delhi</option>
                             <%   }else if(user.city == "Pune"){ %>
                                    <option>Indore</option>
                                    <option>Mumbai</option>
                                    <option selected="selected">Pune</option>
                                    <option>Delhi</option>
                               <% }else if(user.city == "Delhi"){ %>

                                    <option>Indore</option>
                                    <option>Mumbai</option>
                                    <option>Pune</option>
                                    <option selected="selected">Delhi</option>
                              <%  } %>
                            </select>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>

<script>
    window.onload = function(){ 
         
        $('html, body').animate({
            scrollTop: $('#editprofile').offset().top
        }, 'slow');
        
    }
        
        </script>