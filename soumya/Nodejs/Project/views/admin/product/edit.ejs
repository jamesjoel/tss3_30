<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <h4 class="text-center">
                Edit Product</h4>
            <form action="/admin/product/update" method="post">
                <input type="hidden" value="<%= product._id%>" name="product_id">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit your Product Here</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Product Title</label>
                            <input type="text" value="<%= product.product_title %>" class="form-control" name="product_title" />
                        </div>
                        <div class="form-group">
                            <label>Product Price</label>
                            <input type="text" class="form-control" value="<%= product.product_price %>" name="product_price" />
                        </div>
                        <div class="form-group">
                            <label>Product Detail</label>
                            <textarea class="form-control" name="product_detail"><%= product.product_detail %></textarea>
                        </div>
                        <div class="form-group">
                            <label>Product Image</label>
                            <input type="file" class="form-control" value="<%= product.product_image %>"   name="image"/>
                            <p class="text-danger">
                               
                            </p>
                        </div>

                        <div class="form-group">
                            <label>Product Category</label>
                            <select class="form-control" name="product_category">
                            <option>Select Category</option>
                            <% category.forEach(function(x){
                                if(product.product_category == x._id){ %>

                                    <option selected="selected" value="<%= x._id %>"><%= x.category_name %></option>
                           <%     }
                                else{ %>

                                    <option value="<%= x._id %>"><%= x.category_name %></option> 
                               <% }
                            }); %>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Product Discount</label>
                            <input type="text" class="form-control" value="<%= product.product_discount  %>" name="product_discount" />
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-success" />
                    </div>
                </div>
            </form>


        </div>
    </div>
</div>

