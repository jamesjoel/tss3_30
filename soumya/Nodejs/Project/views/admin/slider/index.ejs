<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mb-4">
            <div class="card">
                <div class="card-header">Select Slider Image</div>
                <div class="card-body">

                    <form action="/admin/slider" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Select Slider Image</label>
                        <input type="file" name="image" class="form-control"/>
                        <p class="text-danger">  
                            <%= errMsg %>               
                        </p>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Upload" class="btn btn-success" />
                    </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 offset-md-3">
            <table class="table table-hover table-dark table-bordered table-stripped">
                <thead>
                    <th>S.No</th>
                    <th>Slider Image</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                    
                        <% slider.forEach(function(x,n){ %>
                            <tr>

                            <td><%= n+1 %></td>
                            
                            <td>
                                <img src="/Slider/<%= x.image %>" height="60" width="60" alt="SLider">
                            </td>
                            
                            <td>
                                <a href="/admin/slider/edit/<%= x._id %>"  onclick="setId('<%= x._id %>')" data-target="#uploadSlider" data-toggle="modal" class="btn btn-info">Edit</a>
                            </td>
                                       
                            <td>
                                <a href="/admin/slider/delete/<%= x._id %>" class="btn btn-danger">Delete</a>
                            </td>

                            </tr>
                    <%    }); %>

                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="uploadSlider">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Upload Your Image</h3>
            </div>
            <div class="modal-body">
                <form action="/admin/slider/uploadslider" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" id="pid" value="" />
                <div class="form-group">
                    <label>Select New Slider</label>
                    <input type="file" name="image" class="form-control"/>
                    <p class="text-danger">
                        <%= errMsg %>
                    </p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload" class="btn btn-success" />
                    <button class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function setId(id){
        document.getElementById("pid").value=id;
    }
    </script>
    <% if(errMsg != ""){ %>

        <script type="text/javascript">
            $(window).on('load', function () {
                $('#uploadSlider').modal('show');
            });
        </script>
        <% } %>