<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center text-muted">All Users</h1>
            <table class="table table-dark table-bordered table-striped ">
                <thead>
                    <th>S.no</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </thead>
                <tbody>
                    <%  user.forEach(function(x,n){ %>
                        <tr>
                            <td>
                                <%= n+1 %>
                            </td>
                            <td>
                                <%= x.f_name %>
                            </td>
                            <td>
                                <%= x.email %>
                            </td>
                            <td>
                                <%= x.contact %>
                            </td>
                            <td>
                                <%= x.address %>
                            </td>
                            <td>
                                <a href="/admin/product/edit/<%= x._id %>" class="btn btn-info">Edit</a>
                            </td>
                            <td>
                                <a href="/admin/product/delete/<%= x._id %>" class="btn btn-danger">Delete</a>
                            </td>

                        </tr>
                        <% }); %>

                </tbody>
            </table>
        </div>
    </div>
</div>