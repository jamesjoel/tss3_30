<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center text-muted">All Users</h1>
            <table class="table table-dark table-bordered table-striped ">
                <thead>
                    <th>S.no</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Change Status</th>
                    
                </thead>
                <tbody>
                    <%  user.forEach(function(x,n){ 
                        if(x.status == 1){
                            var status = "Active"
                        }else(x.status == 0){
                            var status = "Deactive"
                        }
                        
                        %>
                        <tr>
                            <td>
                                <%= n+1 %>
                            </td>
                            <td>
                                <%= x.f_name %>
                            </td>
                            <td>
                                <%= x.email %>
                            </td>
                            <td>
                                <%= x.contact %>
                            </td>
                            <td>
                                <%= x.address %>
                            </td>
                            <td>
                              <%= status %>
                            </td>
                            <td>
                                <a href="/admin/slider/change_status/<%= x._id %>/<%= x.status %>" class="btn btn-secondary">Change</a>
                            </td>
                            

                        </tr>
                        <% }); %>

                </tbody>
            </table>
        </div>
    </div>
</div>