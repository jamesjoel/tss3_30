<div class="container">

		
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">

            <h1>Add New Product</h1>
<form action="/admin/product" method="post" enctype="multipart/form-data">	
    <div class="card my-4">
        <div class="card-header">
    <h3>Here Add New Product</h3>
    </div>
    <div class="card-body">


<div class="form-group">
    <label for="inputName">Product Name</label>
    <input type="text" class="form-control" placeholder="New category" name="product_name">
</div>


<div class="form-group">
    <label>Product Category</label>
    <select class="form-control" name="product_category">
        <option>Select Category</option>
        <% category.forEach(function(x){ %>
            <option value="<%= x._id %>"><%= x.category_name %></option>

      <%  }) %>
    </select>
</div>
<div class="form-group">
<label for="inputName">Product image</label>
<input type="file" class="form-control" name="product_image"/>
<p class="text-danger">
    <% errorMsg %>
</p>
</div>

<div class="form-group">
    <label for="inputName">Product Price</label>
    <input type="text" class="form-control" placeholder="product price" name="product_price"/>
</div>

<div class="form-group">
    <label for="inputName">Product Discount</label>
    <input type="text" class="form-control" placeholder="product discount" name="product_discount"/>
</div>

<div class="form-group">
    <label for="inputName">Product Details</label>
    <input type="text" class="form-control" placeholder="product detail" name="product_detail"/>
</div>

<button type="submit" class="btn btn-primary">Add</button>
</div>
</div>

</form>
</div> 
      <div class="col-md-3"></div>

</div>
</div>