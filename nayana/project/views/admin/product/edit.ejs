<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">Update Product</h1>
            <form action="/admin/product/update" method="post">
                <input type='hidden' name="id" value="<%= product._id %>" />
                <div class="card">
                    <div class="card-header">
                        <h4>Update Product Here</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Product Title</label>
                            <input type="text" class="form-control" name="product_title" value="<%= product.product_title %>" />
                        </div>
                        <div class="form-group">
                            <label>Product Price</label>
                            <input type="text" class="form-control" name="product_price" value="<%= product.product_price %>"/>
                        </div>
                        <div class="form-group">
                            <label>Product Detail</label>
                            <textarea class="form-control" name="product_detail"><%= product.product_detail %></textarea>
                        </div>
                        <div class="form-group">
                            <label>Product Category</label>
                            <select class="form-control" name="product_category">
                            <option>Select Category</option>
                            <% category.forEach(function(x){ 
                                if(product.product_category == x._id)
                                { %>

                                    <option selected="selected" value="<%= x._id %>"><%= x.category_name %></option>
                                <% }
                                else
                                { %>

                                    <option value="<%= x._id %>"><%= x.category_name %></option>
                                <% }
                             }) %>
                               
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Product Discount</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="product_discount" value="<%= product.product_discount %>"/>
                                <div class="input-group-append">
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-success" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>